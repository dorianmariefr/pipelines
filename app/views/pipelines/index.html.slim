- content_for(:title) do
  - if @user && @user == current_user
      = t(".title.my_pipelines")
  - elsif @user
      = t(".title.user_pipelines", name: @user.name)
  - elsif current_user
    = t(".title.published_pipelines")
  - else
    = t(".title.pipelines")

- if can? :create, Pipeline
  .p= button_to t(".new"), new_pipeline_path, method: :get

- if @pipelines.any?
  - @pipelines.each do |pipeline|
    = render "pipelines/pipeline", pipeline: pipeline
- else
  p.text-gray-600.italic= t(".none")
